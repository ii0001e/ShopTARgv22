@model IEnumerable<Shop.Models.Kindergarten.KindergartenIndexViewModel>



@{
    int rowNumber = 1;
}

<div>
    <a asp-action="Create" asp-controller="Kindergarten" class="btn btn-primary">Create</a>
</div>




<form method="post">
    <table class=" table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">GroupName</th>
                <th scope="col">Kindergarten Name</th>
                <th scope="col">ChildrenCount</th>
                <th scope="col">Teacher</th>
               
                
              
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kindergarten in Model)
            {
                <tr>
                    <td>@rowNumber</td>

                    <td>@kindergarten.GroupName</td>
                    <td>@kindergarten.ChildrenCount</td>
                    <td>@kindergarten.KindergartenName</td>
                    <td>@kindergarten.Teacher</td>
                    
                   
                    
                    <td>
                        <a asp-action="Details" asp-controller="kindergarten" asp-route-id="@kindergarten.Id" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="kindergarten" asp-route-id="@kindergarten.Id" class="btn btn-primary">Update</a>
                        <a asp-action="Delete" asp-controller="kindergarten" asp-route-id="@kindergarten.Id" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
                rowNumber += 1;
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>

</form>



