@model IEnumerable<Shop.Models.Realestate.RealEstateViewModel>



@{
    int rowNumber = 1;
}

<div>
    <a asp-action="Create" asp-controller="RealEstate" class="btn btn-primary">Create</a>
</div>




<form method="post">
    <table class=" table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Address</th>
                <th scope="col">SizeSqrM</th>
                <th scope="col">RoomCount</th>
                <th scope="col">Floor</th>
               
                
              
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var realstate in Model)
            {
                <tr>
                    <td>@rowNumber</td>

                    <td>@realstate.Address</td>
                    <td>@realstate.SizeSqrM</td>
                    <td>@realstate.RoomCount</td>
                    <td>@realstate.Floor</td>
                    
                   
                    
                    <td>
                        <a asp-action="Details" asp-controller="realestate" asp-route-id="@realstate.Id" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="realestate" asp-route-id="@realstate.Id" class="btn btn-primary">Update</a>
                        <a asp-action="Delete" asp-controller="realestate" asp-route-id="@realstate.Id" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
                rowNumber += 1;
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>

</form>



