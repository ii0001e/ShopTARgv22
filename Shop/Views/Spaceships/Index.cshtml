@model IEnumerable<Shop.Models.Spaceship.SpaeshipsIndexViewModel>

@* <div class="h1">
    Spaceships
</div>  *@

@{
    int rowNumber = 1;
}

<div>
    <a asp-action="create" asp-controller="spaceships" class="btn btn-primary">Create</a> 
</div>




<form method="post"> 
    <table class=" table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th> 
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Passanger</th>
                <th scope="col">Engin Power</th>
                <th></th>
            </tr>
        </thead>
        <tbody> 
            @foreach (var spaceship in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@spaceship.Name</td>
                    <td>@spaceship.Type</td>
                    <td>@spaceship.Passangers</td>
                    <td>@spaceship.EnginPower</td>
                    <td>
                        <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber += 1;
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>

</form>